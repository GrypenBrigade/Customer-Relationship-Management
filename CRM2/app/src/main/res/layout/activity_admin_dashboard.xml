<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="16dp">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Admin"
        app:titleCentered="true"
        app:titleTextColor="@color/text_primary" />

    <!-- USERS CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardUsers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/card_background"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="USERS"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>

                <TextView
                    android:text="Active Users"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/valueActiveUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/viewAllUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW ALL"
                android:textColor="@color/blue_500"
                android:textStyle="bold"
                android:textSize="14sp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- SALES OVERVIEW CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSalesOverview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/card_background"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardUsers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:text="SALES OVERVIEW"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_width="4dp"
                android:layout_height="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:text="Total Sales"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>

                <TextView
                    android:id="@+id/valueTotalSales"
                    android:text="$86,500"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>
            </LinearLayout>

            <!-- Line Chart for Sales Overview -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChartSales"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:text="Top Sales Rep"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>

                <TextView
                    android:id="@+id/valueTopRep"
                    android:text="John Doe"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- LEADS BY STATUS CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLeadsStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/card_background"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardSalesOverview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:text="LEADS BY STATUS"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_width="4dp"
                android:layout_height="4dp"/>

            <!-- Status: New -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:text="New"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:id="@+id/progressNew"
                    android:layout_width="120dp"
                    android:layout_height="8dp"
                    android:progress="45"
                    android:max="60"
                    android:progressTint="@color/text_secondary"
                    android:backgroundTint="@color/card_background"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/valueNew"
                    android:text="45"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>
            </LinearLayout>

            <!-- Status: Contacted -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:text="Contacted"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:id="@+id/progressContacted"
                    android:layout_width="120dp"
                    android:layout_height="8dp"
                    android:progress="30"
                    android:max="60"
                    android:progressTint="@color/blue_500"
                    android:backgroundTint="@color/card_background"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/valueContacted"
                    android:text="30"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>
            </LinearLayout>

            <!-- Status: Closed -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:text="Closed"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:id="@+id/progressClosed"
                    android:layout_width="120dp"
                    android:layout_height="8dp"
                    android:progress="15"
                    android:max="60"
                    android:progressTint="@color/blue_500"
                    android:backgroundTint="@color/card_background"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/valueClosed"
                    android:text="15"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- CUSTOMERS AND LEADS CARDS (2 columns) -->
    <LinearLayout
        android:id="@+id/bottomCardsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardLeadsStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Customers Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background"
            android:layout_marginEnd="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:text="CUSTOMERS"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/valueCustomers"
                    android:text="2,150"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="22sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Leads Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background"
            android:layout_marginStart="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:text="LEADS"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/valueLeads"
                    android:layout_height="4dp"
                    android:text="200"
                    android:textColor="@color/text_primary"
                    android:textSize="22sp"
                    android:textStyle="bold"  android:layout_width="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

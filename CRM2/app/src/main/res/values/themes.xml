<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CRMAdmin.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Background -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorBackground">@color/background_dark</item>

        <!-- Primary colors -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Toolbar -->
        <item name="topAppBarStyle">@style/Widget.CRMAdmin.TopAppBar</item>

        <!-- FAB -->
        <item name="floatingActionButtonStyle">@style/Widget.CRMAdmin.FloatingActionButton</item>
    </style>

    <style name="Widget.CRMAdmin.TopAppBar" parent="Widget.Material3.TopAppBar">
        <item name="backgroundColor">@color/background_dark</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="navigationIconTint">@color/text_primary</item>
        <item name="actionIconTint">@color/text_primary</item>
        <item name="android:elevation">4dp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="Widget.CRMAdmin.FloatingActionButton" parent="Widget.Material3.FloatingActionButton">
        <item name="backgroundTint">@color/teal_200</item>
        <item name="elevation">6dp</item>
    </style>
</resources>
